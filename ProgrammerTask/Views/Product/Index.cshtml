@model IEnumerable<ProgrammerTask.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product </a>
</p>
<div class="text-center">
    <a asp-action="PrintAll" asp-controller="Product" class="btn btn-primary">Print All</a>

   
    <table class="table table-border table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>|
                   
                        <a asp-action="Print" asp-route-id="@item.Id" class="btn btn-primary">Print</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

